
@{
    ViewData["Title"] = "MileageForm";
}

<h1>MileageForm</h1>

<form action="../Trip/MileageResult" method="post">
    <label for="mpg">Mileage (MPG</label>
    <input id="mpg" type="number" name="mpg" step="0.1" placeholder="mpg" min="0" />

    <label for="gallons">Gallons in tank </label>
    <input id="gallons" type="number" name="gallons"step=".001" placeholder="gallons" min="0" max="30" />

    <span style="color: chartreuse;">Trip Distance</span> <input type="number" name="trip" step="0.1" placeholder="miles" min="0"/>
                                                           

    <input type="submit"/>

</form>
